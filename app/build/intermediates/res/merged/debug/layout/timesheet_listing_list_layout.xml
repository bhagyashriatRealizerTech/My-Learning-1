<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    android:id="@+id/timesheetlistingview">

    <TableRow
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:id="@+id/tblTimeSheetListing"
        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtTimeSheetListingSD"
            android:text="Week first day"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtTimeSheetListingTotalHrs"
            android:text="45"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtBtnTimesheetStatus"
            android:text="45"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"/>

    </TableRow>
