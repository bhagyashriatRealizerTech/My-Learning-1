<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#00ffffff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            style="@style/HeadingFontAndSize18dp"
            android:text="FirstName "
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:id="@+id/txtApprovefname"
            android:layout_marginBottom="10dp"/>

        <TextView
            style="@style/NormalFontAndSize"
            android:text="@string/startDate"
            android:layout_marginLeft="10dp"
            android:id="@+id/txtApproveStartDate"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="55dp"/>
        <TextView
            style="@style/NormalFontAndSize"
            android:text="Leave Type"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/txtApproveFirstName"
            />

        <TextView
            style="@style/NormalFontAndSize"
            android:text="Leave No"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:id="@+id/txtApproveLastName"
            />
        <TextView
            style="@style/NormalFontAndSize"
            android:text="@string/endDate"
            android:layout_marginLeft="110dp"
            android:id="@+id/txtApproveEndDate"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="55dp"/>


        <Button
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:text="Approve"
            android:id="@+id/imgBtnApproveLeave"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/buttonselector"
            />

        <Button
            android:layout_gravity="right"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="47dp"
            android:text=" Reject  "
            android:id="@+id/imgBtnRejectLeave"
            android:layout_width="100dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_height="25dp"
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/buttonselector"
            />
    </FrameLayout>

</LinearLayout><!-- From: file:/E:/Bhagyashri/Bhagyashri_Backup/Bhagyashri/HRMSRapidoESS/Project/RapidoESS/app/src/main/res/layout/approve_leave_list_layout.xml -->