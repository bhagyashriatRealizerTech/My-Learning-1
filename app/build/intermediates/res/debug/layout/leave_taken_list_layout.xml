<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff">
    <FrameLayout style="@style/FrameLayoutWeight1">
        <TextView style="@style/NormalFontAndSize"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="@string/leaveCategory"
            android:id="@+id/txtLeaveType"
            android:layout_marginTop="16dp"/>
        <TextView
            style="@style/NormalFontAndSize.MarginLeft200"
            android:background="@drawable/buttongradient"
            android:text="@string/status"
            android:textColor="#ffffff"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:id="@+id/txtStatus"
            />



    </FrameLayout>
    <FrameLayout style="@style/FrameLayoutWeight1">
        <TextView style="@style/NormalFontAndSize"
            android:text="@string/startDate"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:id="@+id/txtStartDate"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="16dp"/>
        <TextView style="@style/NormalFontAndSize"
            android:text="Resume Date"
            android:layout_gravity="center"
            android:id="@+id/txtresumedate"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="8dp"/>

        <TextView style="@style/NormalFontAndSize"
            android:text="@string/endDate"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:id="@+id/txtEndDate"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="16dp"/>

    </FrameLayout>



</LinearLayout><!-- From: file:/E:/RapidoESS/app/src/main/res/layout/leave_taken_list_layout.xml -->