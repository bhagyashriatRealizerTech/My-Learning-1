<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="#00ffffff">

<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="64dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time sheet Start Date"
        android:id="@+id/txtTimesheetStartDate"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_gravity="left|center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Sheet End Date"
        android:id="@+id/txtTimesheetEndDate"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total hrs"
        android:id="@+id/txtTimesheetTotalHrs"
        android:layout_gravity="right|center_vertical"
        android:paddingRight="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Name"
        android:id="@+id/txtTimesheetProjectName"
        android:layout_gravity="left|bottom"
        android:paddingLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time sheet Status"
        android:id="@+id/txtTimesheetStatus"
        android:layout_gravity="right|bottom"
        android:paddingRight="20dp"
        />
</FrameLayout>

