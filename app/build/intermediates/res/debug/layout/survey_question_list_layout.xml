<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00ffffff">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/CustomTextView.ListAttendanceTextView"
            android:layout_marginLeft="15dp"
            android:text="Srno"
            android:id="@+id/txtSurveySummarySrNo" />

        <TextView
            style="@style/CustomTextView.ListAttendanceTextView"
            android:layout_weight="1"
            android:text="Question"
            android:id="@+id/txtSurveySummaryQue"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="60dp"/>


        <TextView
            style="@style/CustomTextView.ListAttendanceTextView"
            android:layout_weight="2"
            android:layout_gravity="right"
            android:text="Answer"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/txtSurveySummaryAnswer"
            />
    </FrameLayout>


</LinearLayout><!-- From: file:/E:/RapidoESS/app/src/main/res/layout/survey_question_list_layout.xml -->